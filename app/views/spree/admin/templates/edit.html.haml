- content_for :page_title do
  = Spree.t(:editing_template)
%div{"data-hook" => "admin_template_edit_form_header"}
  = render 'spree/shared/error_messages', target: @template
%div{"data-hook" => "admin_template_edit_form"}
  = form_for [:admin, @template] do |f|
    .row
      .col-md-12
        = render 'form', f: f
        = render 'spree/admin/shared/edit_resource_links'
