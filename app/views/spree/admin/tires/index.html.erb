<% content_for :page_title do %>
  <%= Spree.t(:listing_tires) %>
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:new_tire), new_object_url, class: 'btn-success', icon: 'add', id: 'admin_new_tire_link' %>
<% end if can?(:create, Spree::Tire) %>

<table class="table" id="listing_tires" data-hook>
  <thead>
    <tr data-hook="admin_tires_index_headers">
      <th><%= t(:name, scope: 'activerecord.attributes.spree/tire') %></th>
      <th data-hook="admin_tires_index_header_actions" class="actions"></th>
    </tr>
  </thead>
  <tbody>
    <% @tires.each do |tire| %>
      <tr id="<%= spree_dom_id tire %>" data-hook="admin_tires_index_rows" class="<%= cycle('odd', 'even')%>">
        <td><%= link_to tire.name, edit_object_url(tire) %></td>
        <td data-hook="admin_tires_index_row_actions" class="actions text-right">
          <%= link_to_edit tire, no_text: true %>
          <%= link_to_delete tire, no_text: true %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @tires %>
