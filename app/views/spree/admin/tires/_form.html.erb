<div data-hook="admin_tire_form_fields" class="row">
  <div class="col-md-6">
    <%= f.field_container :name, class: ['form-group'] do %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
      <%= error_message_on :tire, :name %>
    <% end %>

    <%= f.field_container :size, class: ['form-group'] do %>
      <%= f.label :size %>
      <%= f.number_field :size, class: 'form-control' %>
      <%= error_message_on :tire, :size %>
    <% end %>

    <%= f.field_container :preasure, class: ['form-group'] do %>
      <%= f.label :preasure %>
      <%= f.text_field :preasure, class: 'form-control' %>
      <%= error_message_on :tire, :preasure %>
    <% end %>

  </div>
</div>
