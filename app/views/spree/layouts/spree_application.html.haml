/ [if gt IE 9]><!
%html{:lang => "#{I18n.locale}"}
  / <![endif]
  %head{"data-hook" => "inside_head"}
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    = render partial: 'spree/shared/head'
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    %link{:href => "https://file.myfontastic.com/6AeAYiqp5KBjSiZ2tE8WJW/icons.css", :rel => "stylesheet"}/
    %link{:href => "https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css", :rel => "stylesheet"}/
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body{:class => body_class, "data-hook" => "body", :id => "#{@body_id || 'default'}"}
    = render 'shared/form_translations' if !current_spree_user.nil? && current_spree_user.admin?
    = render partial: 'spree/shared/google_analytics.js'
    = render partial: 'spree/shared/trackers/segment/initializer.js'
    = render 'shared/header'
    .container
      .row{"data-hook" => ""}
        = breadcrumbs(@taxon)
        = render partial: 'spree/shared/sidebar' if content_for? :sidebar
        #content{:class => "#{!content_for?(:sidebar) ? "col-sm-12" : "col-sm-8 col-md-9"}", "data-hook" => ""}
          = flash_messages
          = yield
        = yield :templates
    = render 'shared/footer'
    = render 'shared/modals'
