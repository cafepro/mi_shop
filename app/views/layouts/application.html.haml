!!!
%html
  %head
    %meta{content: "text/html; charset=UTF-8", "http-equiv": "Content-Type"}/

    = yield :page_seo

    = csrf_meta_tags

    %link{ href:'https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800', rel:'stylesheet', type:'text/css' }

    %link{ href:'https://fonts.googleapis.com/css?family=Merriweather:400,300,300italic,400italic,700,700italic,900,900italic', rel:'stylesheet', type:'text/css'}

    %link{ rel:"stylesheet", href:"https://file.myfontastic.com/6AeAYiqp5KBjSiZ2tE8WJW/icons.css"}

    %link{ rel:"stylesheet", href:"https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css"}


    =# stylesheet_link_tag 'spree/frontend/all', media: 'screen'

    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'true'

    = render 'spree/shared/paths'

    = javascript_include_tag 'spree/frontend/all'

    = javascript_include_tag 'application', 'data-turbolinks-track': 'true'




  %body#page-top{class: ""}

    = render 'shared/form_translations' if !current_spree_user.nil? && current_spree_user.admin?

    = render 'shared/header'

    = yield

    = render 'shared/footer'

    = render 'shared/modals'

    = yield :page_css

    = yield :page_js


